@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

    @{
        ViewData["Title"] = "Roles";
    }
<h1>Application Roles</h1>
<p>
    <a asp-controller="Roles" asp-action="Create" class="btn btn-primary mx-2">
        Create New Role
    </a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Id) </th>
            <th>@Html.DisplayNameFor(model=>model.Name) </th> 
            <th>@Html.DisplayNameFor(model => model.NormalizedName) </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.Id)</td>
                <td>@Html.DisplayFor(modelitem => item.Name)</td>
                <td>@Html.DisplayFor(modelitem => item.NormalizedName)</td>
            
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Roles" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square">Edit</i>
                        </a>
                        <a asp-controller="Roles" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash">Delete</i>
                        </a>
                    </div>
                </td>
        </tr>
        }
    </tbody>
</table>